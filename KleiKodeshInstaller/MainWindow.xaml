<Window x:Class="KleiKodeshInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KleiKodeshInstaller"
        mc:Ignorable="d"
        Title="פרוייקט כלי קודש"
        MinWidth="500"
        MinHeight="350"
        SizeToContent="WidthAndHeight"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen" 
        Background="#FFF4F6F8">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF7332FF"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel>

            <Border Background="White" 
                    BorderThickness="1"
                    BorderBrush="LightGray">
                <StackPanel>
                    <Border Background="#FF7333FF" 
                    Height="150"
                    CornerRadius="0,0,25,25">
                        <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center">
                            <Border Background="White" 
                            Height="40" Width="40">
                                <Image Source="/Klei_Kodesh.ico"/>
                            </Border>
                            <TextBlock Text="כלי קודש לוורד" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               FontSize="25"
                               Margin="3"/>
                            <TextBlock Text="ארגז כלים לעורך התורני" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               FontSize="15"/>
                        </StackPanel>
                    </Border>

                    <UniformGrid Rows="1" 
                             HorizontalAlignment="Center">
                        <Button x:Name="InstallButton"
                             Grid.Row="3"
                             Padding="20,5"
                             Content="התקן כעת"
                             Click="InstallButton_Click"
                             Margin="10"/>
                        <Button x:Name="UnInstallButton"
                              Grid.Row="3"
                              Padding="20,5"
                              Content="הסר התקנה"
                              Click="UnInstallButton_Click"
                              Margin="10"/>
                    </UniformGrid>

                    <ProgressBar x:Name="Progress"
                          Height="20"
                          Minimum="0"
                          Maximum="100"
                          Value="0"
                          Background="Transparent"
                          BorderThickness="0"/>     
                </StackPanel>
            </Border>

        </StackPanel>

        <TextBlock VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center"
                   Margin="3">
    <Hyperlink NavigateUri="https://kleikodesh.github.io/" RequestNavigate="Hyperlink_RequestNavigate">
        kleikodesh.github.io ©
    </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
